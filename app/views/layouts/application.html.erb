<!DOCTYPE html>
<html>
  <head>
    <title>RailsWikinimous</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.3/css/all.css">
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light justify-content-between align-items-center border-bottom mb-5">
      <%= link_to "Wikinimous", articles_path, class: "navbar-brand" %>
      <ul class="nav navbar-nav">
        <li>
          <%= link_to "New Article", new_article_path %>
        </li>
      </ul>
    </nav>

    <div class="container">
      <div class="row justify-content-center">
      <div class="col-sm-8">
      <%= yield %>
      </div>
      </div>
    </div>
  </body>
</html>
